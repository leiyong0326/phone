	<filter>
		<filter-name>character</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>character</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>paramFilter</filter-name>
		<filter-class>com.ly.base.common.filter.ParamFilter</filter-class>
		<init-param>
			<param-name>printHead</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>printParam</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>enable</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>paramFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>shiroFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetFilterLifecycle</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>targetBeanName</param-name>
			<param-value>shiroFilter</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>shiroFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<error-page>
		<error-code>400</error-code>
		<location>/src/error/400.html</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/src/error/404.html</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/src/error/404.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/src/error/500.html</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/src/error/error.html</location>
	</error-page>
</web-app>